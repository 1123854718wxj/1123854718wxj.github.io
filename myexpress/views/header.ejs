<script>
    checkToken();
    function checkToken() {
        $.ajax({
            url: '/checkToken',
            headers: {
                token: sessionStorage.token
            },
            success(res) {
                if (!!res.type) {
                    $('#login').hide();
                    $('#register').hide();
                } else {
                    $('#logout').hide();
                }
            }
        })
    }
</script>